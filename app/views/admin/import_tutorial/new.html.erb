<h2>New Tutorial</h2>
<%= form_for [:admin, @tutorial], :url => url_for(:controller =>'import_tutorial', :action => 'create') do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "block col-4 field" %>
  <%= f.label :description %>
  <%= f.text_area :description, class: "block col-4 field"  %>
  <%= f.label :thumbnail %>
  <%= f.text_field :thumbnail, class: "block col-4 field"  %>
  <%= f.label :playlist_id %>
  <%= f.text_field :playlist_id, class: "block col-4 field"  %>
  <%= f.submit "Create", class: "mt2 btn btn-primary mb1 bg-teal"  %>
<% end %>